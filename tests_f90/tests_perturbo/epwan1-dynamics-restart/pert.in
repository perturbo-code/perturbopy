&perturbo
  prefix        = 'gaas'
  calc_mode     = 'dynamics-run'
  
  boltz_kdim(1) = 50
  boltz_kdim(2) = 50
  boltz_kdim(3) = 50

  boltz_emin    =  9.5   ! VBM = 9.26 eV
  boltz_emax    = 10.2   ! CBM = 9.71 

  ! 7, 8 valence bands
  ! 9,10 conduction bands
  band_min      = 9
  band_max      = 10

  tmp_dir       = './tmp'

  boltz_nstep   = 70
  time_step     = 2
  output_nstep  = 1
  solver        = 'euler'

  boltz_init_dist = 'restart'
  boltz_init_e0 = 10.0    ! eV
  boltz_init_smear = 40.0 ! meV

  delta_smear   = 8
  phfreq_cutoff = 2

  ftemper = 'gaas.temper'
 /
